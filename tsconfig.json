{
  "include": ["src/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "declaration": true,
    "declarationDir": ".",
    "declarationMap": true,
    "esModuleInterop": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2021"
  }
}
